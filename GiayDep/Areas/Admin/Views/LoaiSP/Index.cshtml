@model IEnumerable<GiayDep.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Danh sách loại sản phẩm</h1>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Tên loại sản phẩm 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId">Chỉnh sửa</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryId">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryId">Xóa </a>
            </td>
        </tr>
}
    </tbody>
</table>
