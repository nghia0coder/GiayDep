@model IEnumerable<GiayDep.Models.NhaCungCap>

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết nhà cung cấp </h1>

<p>
    <a asp-action="Create">Thêm mới </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên nhà cung cấp 
            </th>
            <th>
               Địa chỉ 
            </th>
            <th>
                Số điện thoại 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdnhasxNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tennhacc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diachi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sdt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdnhasxNavigation.Idnhasx)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idnhacc">Chỉnh sửa </a> |
                <a asp-action="Details" asp-route-id="@item.Idnhacc">Chi tiết </a> |
                <a asp-action="Delete" asp-route-id="@item.Idnhacc">Xóa </a>
            </td>
        </tr>
}
    </tbody>
</table>
