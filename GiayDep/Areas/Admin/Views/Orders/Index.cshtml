@model IEnumerable<GiayDep.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Danh sách hóa đơn </h1>

<p>
    <a asp-action="Create">Thêm mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Ngày thanh toán 
            </th>
            <th>
               Tình trạng giao hàng 
            </th>
            <th>
               Ngày giao 
            </th>
            <th>
                Đã thanh toán 
            </th>
            <th>
                Đã hủy 
            </th>
            <th>
                Đã xóa
            </th>
            <th>
              Khuyến mãi 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Delivered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeliveryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderId">Chỉnh sửa </a> |
                <a asp-action="Details" asp-route-id="@item.OrderId">Chi tiết </a> |
                <a asp-action="Delete" asp-route-id="@item.OrderId">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
