@model GiayDep.Models.InvoiceDetail

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Xóa</h1>

<h3>Bạn có chắc chắn muốn xóa??</h3>
<div>
    <h4>Chi tiết phiếu nhập</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ngày nhập
        </dt>
    
        <dt class = "col-sm-2">
            Số lượng 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quanity)
        </dd>
        <dt class = "col-sm-2">
            Giá 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InvoiceId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Invoice.InvoiceId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Product.ProductId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
     
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Trở về</a>
    </form>
</div>
